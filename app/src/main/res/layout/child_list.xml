<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="5dp"
    android:background="#f7f2fc"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:id="@+id/child_description"
        android:paddingStart="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/child_category"
        android:paddingStart="50dp"
        android:layout_below="@id/child_description"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:id="@+id/child_deadline"
        android:paddingStart="50dp"
        android:layout_below="@id/child_category"
        />
    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/done"
        android:layout_alignEnd="@id/child_category"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"/>

</RelativeLayout>